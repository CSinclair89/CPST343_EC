<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
				xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
				x:Class="CoreQuiz.MainPage"
			   Title=".NET MAUI Quiz">
    <Grid>
        <RadioButton Content="2018" GroupName="question" Margin="800,0,0,0" IsChecked="True" FontFamily="Microsoft JhengHei UI Light" FontSize="22" />
        <RadioButton Content="2014" GroupName="question" Margin="800,50,0,0" FontFamily="Microsoft JhengHei UI Light" FontSize="22" />
        <RadioButton Content="2000" GroupName="question" Margin="800,100,0,0" FontFamily="Microsoft JhengHei UI Light" FontSize="22"/>
        <RadioButton Content="1994" GroupName="question" Margin="800,150,0,0" FontFamily="Microsoft JhengHei UI Light" FontSize="22"/>
        
        <Label Text="What year was .NET Core Released?" FontSize="36" FontFamily="Microsoft JhengHei UI Light" WidthRequest="500" MaximumHeightRequest="100" Margin="0,300,0,0" />
        
        <Button Text="Submit" FontSize="23" Clicked="Button_Click" MaximumHeightRequest="50" MaximumWidthRequest="200" Margin="0, 400, 0, 0"/>

    </Grid>
</ContentPage>